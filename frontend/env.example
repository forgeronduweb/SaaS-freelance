# ===========================================
# AFRILANCE - VARIABLES D'ENVIRONNEMENT
# ===========================================

# Database MongoDB
DATABASE_URL="mongodb://localhost:27017/afrilance"
# Pour MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/afrilance

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret-key"
JWT_REFRESH_EXPIRES_IN="30d"

# Email Configuration (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="AfriLance <noreply@afrilance.com>"

# Stripe Payment
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Mobile Money APIs
ORANGE_MONEY_API_KEY="your-orange-money-api-key"
ORANGE_MONEY_API_SECRET="your-orange-money-api-secret"
ORANGE_MONEY_BASE_URL="https://api.orange.com/orange-money-webpay"

MTN_MONEY_API_KEY="your-mtn-money-api-key"
MTN_MONEY_API_SECRET="your-mtn-money-api-secret"
MTN_MONEY_BASE_URL="https://sandbox.momodeveloper.mtn.com"

MOOV_MONEY_API_KEY="your-moov-money-api-key"
MOOV_MONEY_API_SECRET="your-moov-money-api-secret"

WAVE_API_KEY="your-wave-api-key"
WAVE_API_SECRET="your-wave-api-secret"

# Real-time Notifications (Pusher)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="eu"

# Application URLs
NEXTAUTH_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3000/api"

# File Upload & Storage
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="afrilance-uploads"

# Security & Rate Limiting
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=10
MIN_WITHDRAWAL_AMOUNT=10000
MAX_FILE_SIZE_MB=10

# SMS Notifications (Optional)
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"
SMS_SENDER_ID="AfriLance"

# Development/Production
NODE_ENV="development"
DEBUG=true
